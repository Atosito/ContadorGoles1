<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.tomi.databasegoles.Widget.RobotoTextView
            android:id="@+id/tvAÃ±o"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="2017"
            android:textAlignment="center"
            android:textSize="19dp"
            app:typeface="roboto_black" />

        <ImageView
            android:id="@+id/ivGoles"
            android:layout_width="0dp"
            android:paddingLeft="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_goles" />

        <com.example.tomi.databasegoles.Widget.RobotoTextView
            android:id="@+id/tvGoles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="55"
            android:background="@color/primary_light"
            android:textAlignment="center"
            android:textSize="24sp"
            app:typeface="roboto_bold" />

        <ImageView
            android:id="@+id/ivPartido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            app:srcCompat="@drawable/ic_partido" />

        <com.example.tomi.databasegoles.Widget.RobotoTextView
            android:id="@+id/tvPartidos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="1"
            android:layout_weight="1"
            android:text="48"
            android:background="@color/primary_light"
            android:textAlignment="center"
            android:textSize="24sp"
            app:typeface="roboto_bold" />

        <ImageView
            android:id="@+id/ivMeta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            app:srcCompat="@drawable/ic_action_name" />

        <com.example.tomi.databasegoles.Widget.RobotoTextView
        android:id="@+id/tvMeta"
        android:layout_width="0dp"
            android:maxLines="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="50"
        android:background="@color/primary_light"
        android:textAlignment="center"
        android:textSize="24sp"
        app:typeface="roboto_bold" />

        <ImageView
            android:id="@+id/ivEditar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.43"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_menu_list" />

    </LinearLayout>

</LinearLayout>