<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivPartido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            app:srcCompat="@drawable/ic_partido" />

        <com.example.tomi.databasegoles.Widget.RobotoTextView
            android:id="@+id/tvRival"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/primary_light"
            android:text="GEBA"
            android:textAlignment="center"
            android:textSize="20dp"
            app:typeface="roboto_bold" />

        <com.example.tomi.databasegoles.Widget.RobotoTextView
            android:id="@+id/tvCompetencia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Torneo Local"
            android:textAlignment="center"
            android:textSize="14dp"
            app:typeface="roboto_light" />

        <ImageView
            android:id="@+id/ivGoles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            app:srcCompat="@drawable/ic_goles" />

        <com.example.tomi.databasegoles.Widget.RobotoTextView
            android:id="@+id/tvGoles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:background="@color/primary_light"
            android:text="50"
            android:textAlignment="center"
            android:textSize="24sp"
            app:typeface="roboto_bold" />

        <ImageView
            android:id="@+id/ivEditar"
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="false"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_menu_list" />


    </LinearLayout>

</LinearLayout>